-- 1.Tesla Models:
-- Solution:

import pandas as pd;

tesla_models['profit'] = (tesla_models['car_price'] - tesla_models['production_cost'])* tesla_models['cars_sold']
tesla_models.sort_values(by='profit', ascending = False).head(1)

